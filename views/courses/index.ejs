<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
</head>
<body>
    <h1>Courses</h1>
    
    <% if (courses && courses.length > 0) { %>
        <ul>
            <% courses.forEach(function(course) { %>
                <li>
                    <strong><%= course.title %></strong><br>
                    <%= course.description %><br>
                    Prix: <%= course.cost %>â‚¬<br>
                    Niveau: <%= course.level %>
                    <a href="/courses/<%= course._id %>">Voir</a>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>Aucun cours disponible.</p>
    <% } %>

    <a href="/courses/new">Ajouter un nouveau cours</a>
</body>
</html>
